- if current_user
  - submitted_research_topics = current_user.submitted_research_topics
- else
  - submitted_research_topics = []


.panel.research_topics{class: (local_assigns[:panel_class] ? panel_class : "panel-default")}
  .panel-heading
    .panel-title
      My Questions

  .panel-body
    - if submitted_research_topics.empty?
      .alert.alert-info
        None.

    - else
      .list-group
        - submitted_research_topics.each do |research_topic|
          .list-group-item.research_question
            = link_to research_topic.text, research_topic_path(research_topic)

    %a.btn.btn-success.btn-sm.btn-block{href: new_research_topic_path} Propose a Question
