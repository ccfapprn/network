.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        .panel-title Join
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f|
          = devise_error_messages!
          .form-group
            = f.label :email, :class => "control-label col-sm-5"
            .col-sm-7
              = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email"
          .form-group
            = f.label :password, :class => "control-label col-sm-5"
            .col-sm-7
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
          .form-group
            = f.label :password_confirmation, "Password Confirm", :class => "control-label col-sm-5"
            .col-sm-7
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation"
          .form-group
            = f.label :condition, :class => "control-label col-sm-5"
            .col-sm-7
              %select.form-control
                - Figaro.env.pprn_conditions.split(",").each do |condition|
                  %option
                    = condition
          .form-group
            .col-sm-offset-5.col-sm-7
              = f.submit "Sign up", :class => "btn btn-primary"
    %p.text-center
      Already a Member
      %a{:href => new_user_session_path} Sign in.

    %p.text-center
      Under age 18?  Join
      = link_to "CCFA Partners Kids and Teens", "https://cgibd.med.unc.edu/ccfapeds/"


